@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}


<h3>Yeni Kategori Ekle</h3>
<br />
<form method="post">
	<div class="form-group">
		@Html.Label("Kategori Adı")
		<input type="text" asp-for="CategoryName" class="form-control" />
		<span asp-validation-for="CategoryName" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		@Html.Label("Kategori İkonu")
		<input type="text" asp-for="Icon" class="form-control" />
		<span asp-validation-for="Icon" class="text-danger"></span>
	</div>
	<br />
	<br />
	<button type="submit" class="btn btn-outline-primary">Ekle</button>
</form>