@model GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<div class="card">
    <h5 class="card-header">Ürün Güncelle</h5>
    
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Ürün Adı</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductStock" class="form-label">Stok</label>
                <input asp-for="ProductStock" class="form-control" type="number" />
                <span asp-validation-for="ProductStock" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductPrice" class="form-label">Fiyat</label>
                <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductImage" class="form-label">Ürün Fotoğrafı URL</label>
                <input asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Kategori</label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-select">
                    <option value="">Kategori Seçiniz</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-primary">Ürünü Ekle</button>
        </form>
    </div>
</div>


