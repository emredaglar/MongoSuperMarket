@model List<ResultDiscountDto>

@{
    int count = 0;
}
<section class="py-5">
    <div class="container-fluid">
        <div class="row">

            @foreach (var item in Model.TakeLast(2))
            {
                var bgClass =count % 2 == 0 ? "bg-danger mb-3" : "bg-info";
                <div class="col-md-6">
                    <div class="banner-ad bg-danger mb-3" style="background: url('@item.Image');background-repeat: no-repeat;background-position: right bottom;">
                        <div class="banner-content p-5">

                            <div class="categories text-primary fs-3 fw-bold">%@item.DiscountPercent İndirim</div>
                            <h3 class="banner-title">@item.DiscountTitle</h3>
                            <p>@item.Description</p>
                            <a href="#" class="btn btn-dark text-uppercase">Sepete Ekle</a>

                        </div>

                    </div>
                </div>
                count++;
            }                   
        </div>
    </div>
</section>